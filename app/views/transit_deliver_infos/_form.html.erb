<%= render "form_before" %>
<%= semantic_form_for resource ,:remote => true,:html => {:id => "transit_deliver_info_form"} do |f|%>
  <%=f.error_messages %>
  <%= f.inputs do %>
    <%= f.hidden_field :user_id,:value => current_user.id if f.object.new_record?%>
    <%= f.input :bill_date,:label =>"中转日期",:as => :string,:input_html =>{:readonly => true,:size => 20,:class => 'datepicker'} %>
    <%= f.input :org_id,:as => :select,:label=>"中转部门",:collection => current_ability_orgs_for_select,:include_blank => false,:input_html => {:id => "transit_org_id_or_to_org_id"} %>
    <%= f.input :note,:as => :string,:label=> "备注",:input_html => {:size => 60} %>
  <%end%>
<% end%>
