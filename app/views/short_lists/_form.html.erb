<%= semantic_form_for resource, :remote => true,:html => {:id => "short_list_form",:class => "bill_selector"} do |f|%>
  <%=f.error_messages %>
  <%= f.inputs do %>
    <%= f.hidden_field :user_id,:value => current_user.id if f.object.new_record?%>
    <%= f.input :bill_date,:as => :string,:input_html =>{:readonly => true,:size => 20,:class => 'datepicker'} %>
    <%= f.input :bill_no,:hint => "短驳单编号",:input_html => {:placeholder => "短驳单编号"} %>
    <%= f.input :from_org_id,:as => :select,:collection => current_ability_orgs_for_select,:include_blank => false,:input_html => {:id => "from_org_id"} %>
    <%= f.input :to_org_id,:as => :select,:collection => all_yards_for_select ,
      :include_blank => false,
      :input_html => {:id => :to_yard_id,:class => :select_org} %>

    <%= f.input :vehicle_no,:hint => "车牌号",:input_html => {:placeholder => "豫A12345",:size => 20} %>
    <%= f.input :driver,:hint => "司机",:input_html =>{:size => 20} %>
    <%= f.input :mobile,:hint => "手机",:input_html =>{:size => 20} %>
    <%= f.input :note,:as => :string,:input_html => {:size => 60} %>
  <% end %>
<% end%>