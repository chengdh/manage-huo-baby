<table class='table'>
  <thead>
    <tr>
      <td>序号</td>
      <td>所属机构</td>
      <td>区域</td>
      <td>姓名</td>
      <td>电话</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <%collection.each_with_index do |customer,index|%>
      <tr>
        <td><%= order_no(index,params[:page]) %></td>
        <td><%= customer.try(:org).try(:name) %></td>
        <td><%= customer.deliver_region %></td>
        <td><%= customer.name %></td>
        <td><%= customer.mobile %></td>
        <td>
          <%if can? :edit,BranchCustomer%>
            <%= link_to "修改",edit_branch_customer_path(customer) %>
          <%end%>
        </td>
      </tr>
    <%end%>
  </tbody>
  <tfoot>
    <tr>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>合计</td>
      <td>共<%=@search.count%>人</td>
      <td>&nbsp;</td>
    </tr>
  </tfoot>
</table>
<div class="actions-bar wat-cf">
  <div class="actions">
    <%=will_paginate collection %>
  </div>
</div>
