<%= semantic_form_for resource_class.search,:url => collection_path,:html => {:method => :get,:style => "width : 300px;" } do |f|%>
  <%= hidden_field_tag :direction,params[:direction] %>
  <%= hidden_field_tag :sort,params[:sort] %>
  <%= f.inputs do %>
    <%= f.input :bill_date_gte,:label => "录入日期",:as => :string,:input_html =>{:class => 'datepicker',:size => 20,:readonly => true} %>
    <%= f.input :bill_date_lte,:label => "~",:as => :string,:input_html =>{:class => 'datepicker',:size => 20,:readonly => true} %>

    <%= f.input :org_id_eq,:label => "机构",:as => :select,:collection => orgs_for_select %>
    <%= f.input :state_eq,:label => "状态",:as => :select,:collection => in_stock_bill_states_for_select %>
  <% end %>
  <%=f.actions do %>
    <%=f.submit "查询",:class => "sexybutton sexysimple sexyblue",:disable_with => "查询中..." %>
  <% end %>
<% end%>
