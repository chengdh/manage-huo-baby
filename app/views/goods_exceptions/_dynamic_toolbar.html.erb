<!--动态toolbar-->
<div class="secondary-navigation">
  <ul class="wat-cf">
    <%if params[:action] == "show"%>
      <%= render :partial => 'toolbar_btn_back' %>
    <%end%>
    <%if can? :read,resource_class%>
      <li class="first">
        <%= link_to image_tag("grid.png",:alt => "#{resource_class.model_name.human}列表") , collection_path("search[state_ni]" => ["identified",'posted']),:title => "#{resource_class.model_name.human}列表",:class => "tipsy"  %>
      </li>
      <%if self.respond_to?("search_#{controller_name.tableize}_path")%>
        <li><%= link_to image_tag("application-search-result.png",:alt => "查询#{resource_class.model_name.human}"),self.send("search_#{controller_name.tableize}_path"),:title => "查询#{resource_class.model_name.human}",:class => "fancybox tipsy" %></li>
      <%end%>
    <%end%>
    <%if can? :create,resource_class%>
      <li>
        <%= link_to image_tag("application--plus.png",:alt => "新建#{resource_class.model_name.human}"), new_resource_path,:title => "新建#{resource_class.model_name.human}",:class => "tipsy"  %>
      </li>
    <%end%>

    <%if params[:action] == "new"%>
      <li>
        <%= link_to image_tag("disk-black.png",:alt => "保存#{resource_class.model_name.human}"), "#",
          :id => "btn_create_goods_exception",:title => "保存#{resource_class.model_name.human}",:class => "tipsy"  %>
      </li>
    <%end%>
    <%if ["edit","show_authorize","show_claim","show_identify"].include? params[:action] %>
      <li>
        <%= link_to image_tag("disk-black.png",:alt => "保存#{resource_class.model_name.human}"), "#",
          :id => "btn_update_goods_exception",:title => "保存#{resource_class.model_name.human}",:class => "tipsy"  %>
      </li>
    <%end%>
    <%if params[:action] == "show"%>
      <%if can? :update,resource%>
        <%= render :partial => 'toolbar_btn_update' %>
      <%end%>
      <%if can? :show_authorize,resource%>
        <li>
          <%= link_to image_tag("balance--pencil.png",:alt => "核销理赔记录"),  show_authorize_goods_exception_path(resource),:title => "核销理赔记录",:class => "tipsy" %>
        </li>
      <%end%>
      <%if can? :show_claim,resource%>
        <li>
          <%= link_to image_tag("money-coin.png",:alt => "录入理赔信息"),  show_claim_goods_exception_path(resource),:title => "录入理赔信息",:class => "tipsy" %>
        </li>
      <%end%>
      <%if can? :show_identify,resource%>
        <li>
          <%= link_to image_tag("document-stamp.png",:alt => "责任鉴定"),  show_identify_goods_exception_path(resource),:title => "责任鉴定",:class => "tipsy" %>
        </li>
      <%end%>
      <%if can? :print,resource%>
        <li>
          <%= link_to_function image_tag("printer.png",:alt => "打印"),  "",:title => "打印",:class => "tipsy btn_print_goods_exception" %>
        </li>
      <%end%>
      <!--付款核销-->
      <%if can? :do_post,resource%>
        <li>
          <%= link_to image_tag("glyph_check.png",:size => "16x16",:alt => "核销确认"),  do_post_goods_exception_path(resource),:title => "付款核销",:class => "tipsy",:method => :put %>
        </li>
      <%end%>
    <%end%>
    <%= render "extra_toolbar" %>
  </ul>
</div>
