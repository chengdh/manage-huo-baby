<%= semantic_form_for resource,:html => {:id => "message_form"} do |f|%>
  <%=f.error_messages %>
  <%= f.inputs do %>
    <%= f.hidden_field :publisher_id,:value => current_user.id if f.object.new_record?%>
    <%= f.hidden_field :state,:value => "published" if f.object.new_record?%>
    <%= f.input :org_id,:as => :select,:collection => current_ability_orgs_for_select,:include_blank => false %>
    <%= f.input :title,:as => :string,:input_html =>{:size => 60} %>
    <%= f.text_area :body, :class => "tinymce", :rows => 30, :cols => 120 %>
  <% end %>
<% end%>
<%= tinymce :language => "zh_CN" %>
