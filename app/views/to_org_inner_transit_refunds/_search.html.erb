<%= semantic_form_for resource_class.search,:url =>collection_path,:html => {:method => :get,:style => "width : 300px;" } do |f|%>
  <%= hidden_field_tag :direction,params[:direction] %>
  <%= hidden_field_tag :sort,params[:sort] %>
  <%= f.inputs do %>
    <%= f.input :from_org_id_eq,:label => "返款机构",:as => :select,:collection => branches_for_select(false) %>
    <%= f.input :transit_org_id_eq,:label => "中转机构",:as => :select,:collection => all_summary_orgs_for_select,:include_blank => false %>
    <%= f.input :to_org_id_eq,:label => "收款机构",:as => :select,:collection => current_ability_orgs_for_select %>
    <%= f.input :bill_date_gte,:label => "返款日期",:as => :string,:input_html =>{:class => 'datepicker',:size => 20,:readonly => true,:value => Date.today} %>
    <%= f.input :bill_date_lte,:label => "~",:as => :string,:input_html =>{:class => 'datepicker',:size => 20,:readonly => true,:value => Date.today} %>
    <%= f.input :state_eq,:label => "状态",:as => :select,:collection => refound_states_for_select %>
  <% end %>
  <%=f.actions do %>
    <%=submit_tag "查询清单",:class => "sexybutton sexysimple sexyblue" %>
  <% end %>
<% end%>
