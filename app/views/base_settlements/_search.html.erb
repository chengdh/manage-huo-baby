<%= semantic_form_for resource_class.search,:html => {:method => :get,:style => "width : 300px;" } do |f|%>
  <%= hidden_field_tag :direction,params[:direction] %>
  <%= hidden_field_tag :sort,params[:sort] %>
  <%= f.inputs do %>
    <%= f.input :org_id_eq,:label => "分理处/分公司",:as => :select,
      :collection => current_ability_orgs_for_select,
      :input_html => {:class => :select_org,:title => "可录入拼音简写查询发货地"}
    %>
    <%= f.input :bill_date_gte,:label => "结算日期",:as => :string,:input_html =>{:class => 'datepicker',:size => 20,:readonly => true,:value => Date.today} %>
    <%= f.input :bill_date_lte,:label => "~",:as => :string,:input_html =>{:class => 'datepicker',:size => 20,:readonly => true,:value => Date.today} %>
    <%= f.input :state_eq,:label => "状态",:as => :select,:collection => settlement_states_for_select,:input_html =>{:class => "ufd-select"}  %>
  <% end %>
  <%=f.actions do %>
    <%= f.action :submit,:label => :search,:button_html => { :class => "sexybutton sexysimple sexyblue",:disable_with => '查询中...' } %>
  <% end %>
<% end%>
