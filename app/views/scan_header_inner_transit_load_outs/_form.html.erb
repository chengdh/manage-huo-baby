<%= semantic_form_for resource, :remote => true,:html => {:id => "scan_header_load_out_form",:class => "bill_selector"} do |f|%>
  <%=f.error_messages %>
  <%= f.inputs do %>
    <%= f.hidden_field :user_id,:value => current_user.id if f.object.new_record?%>
    <%= f.input :bill_date,:as => :string,:input_html =>{:readonly => true,:size => 20,:class => 'datepicker'} %>
    <%= f.input :from_org_id,:as => :select,:collection => current_ability_orgs_for_select,:include_blank => false,:input_html => {:id => "from_org_id"} %>
    <%= f.input :to_org_id,
      :as => :select,
      :collection => exclude_current_ability_orgs_for_select(true,true,true),
      :include_blank => false,
      :input_html => {:id => :to_org_id,:class => :select_org} %>

    <%= f.input :v_no,:as => :string,:input_html => {:size => 20} %>
    <%= f.input :driver_name,:as => :string,:input_html => {:size => 20} %>
    <%= f.input :mobile,:as => :string,:input_html => {:size => 20} %>
    <%= f.input :id_no,:as => :string,:input_html => {:size => 20} %>
    <%= f.input :note,:as => :string,:input_html => {:size => 60} %>
    <%= hidden_field_tag :state_eq,:loaded_in%>
  <% end %>
<% end%>
