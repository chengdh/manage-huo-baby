<%= semantic_form_for resource_class.search,:html => {:method => :get,:style => "width : 300px;" } do |f|%>
  <%= hidden_field_tag :direction,params[:direction] %>
  <%= hidden_field_tag :sort,params[:sort] %>
  <%= f.inputs do %>
    <%= f.input :carrying_bill_bill_no_eq,:label =>"运单号",:input_html => {:size => 30} %>
    <%= f.input :bill_date_gte,:label => "上报日期",:as => :string,:input_html =>{:class => 'datepicker',:size => 20,:readonly => true,:value => Date.today} %>
    <%= f.input :bill_date_lte,:label => "~",:as => :string,:input_html =>{:class => 'datepicker',:size => 20,:readonly => true,:value => Date.today} %>
    <%= f.input :org_id_eq,:label =>"组织机构",:as => :select,:collection => current_ability_orgs_for_select,:include_blank => true %>

    <%= f.input :state_eq,:label => "状态",:as => :select,:collection => goods_error_states_for_select,:include_blank => true %>
  <% end %>
  <%=f.actions do %>
    <%=submit_tag "查询理赔信息",:class => "sexybutton sexysimple sexyblue" %>
  <% end %>
<% end%>
