<%= semantic_form_for resource ,:remote => true,:html => {:id => "short_fee_info_form"} do |f|%>
  <%=f.error_messages %>
  <%= f.inputs do %>
    <%= f.hidden_field :user_id,:value => current_user.id if f.object.new_record?%>
    <%= f.hidden_field :op_org_id,:value => current_user.default_org.id if f.object.new_record?%>
    <%= f.hidden_field :fee_type,:class => :fee_type%>
    <%= f.input :bill_date,:as => :string,:input_html =>{:readonly => true,:size => 20,:class => 'datepicker'} %>
    <%= f.input :org_id,:as => :select,:collection => branches_for_select(false,false,true),:include_blank => false,:input_html => {:id=> "from_org_id_or_to_org_id"} %>
    <%= f.input :note,:as => :string,:input_html => {:size => 60} %>
  <% end %>
<% end%>
<%if params[:show_batch].present?%>
  <%= render "form_after_batch" %>
<% else %>
  <%= render "form_before" %>
<% end %>
