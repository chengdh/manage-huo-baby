<%= semantic_form_for @search,:html => {:method => :get,:style => "width : 300px;" } do |f|%>
  <%= hidden_field_tag :direction,params[:direction] %>
  <%= hidden_field_tag :sort,params[:sort] %>
  <%= f.inputs do %>
    <%= f.input :org_id_eq,:label => "分理处",:as => :select,:collection => current_ability_orgs_for_select,:input_html => {:class => "select_org"} %>
  <% end %>
  <%=f.actions do %>
    <%=submit_tag "查询",:class => "sexybutton sexysimple sexyblue",:disable_with => "查询中..." %>
  <% end %>
<% end%>
