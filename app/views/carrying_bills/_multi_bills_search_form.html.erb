<%= semantic_form_for CarryingBill.search,:html => {:id => "multi_bills_search_form",:method => :get } do |f|%>
  <%= f.inputs do %>
    <%= hidden_field_tag :show_fields,'.state,.deliver_date,.pay_date,.insured_fee,.from_short_carrying_fee,.to_short_carrying_fee,.goods_fee,.carrying_fee_total'%>
    <%= hidden_field_tag :hide_fields,'.note'%>
    <%= text_area_tag :bill_nos,nil,:size => "90x5",:id => "txt_multi_bills_search" %>
  <% end %>
  <%= f.actions :class => 'text-left' do %>
    <%= link_to_function "查询运单","",:class => 'sexybutton sexysimple sexyblue',:id => "btn_multi_bills_search"  %>
  <% end %>
<% end%>
