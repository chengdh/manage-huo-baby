<%= semantic_form_for resource,:html => {:id => "#{resource_class.name.underscore}_form",:style => "width : 400px;",:class => get_org_edit_permission_class } do |f|%>
  <%=f.error_messages %>
  <%= f.inputs do %>
    <%= f.input :org_id,:as => :select ,:collection => current_ability_orgs_for_select,:include_blank => false %>
  <%end%>
  <%= f.inputs :name,:mobile,:phone,:address,:usually_location%>

  <%if can? :adjust_level,ImportedCustomer%>
    <%= f.inputs do %>
      <%= f.input :level,:label => "等级",:as => :select,:collection => customer_levels_for_select %>
    <%end%>
  <%end%>
  <%= f.inputs :sales_man,:sales_man_mobile %>
  <%= f.inputs :is_active %>
<% end%>
