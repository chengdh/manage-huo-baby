<%= semantic_form_for resource ,:remote => true,:html => {:id => "#{resource_class.name.underscore}_form",:style => "width : 400px;",:class => get_org_edit_permission_class } do |f|%>
  <%=f.error_messages %>
  <%= f.inputs :class =>"city-group" do %>
    <%= f.input :org_id,:as => :select ,:collection => current_ability_orgs_for_select,:include_blank => false %>
    <%= f.input :province_code,:as => :select,:collection => ChinaCity.list,:input_html => {:class => 'city-select city-province'}%>
    <%= f.input :city_code,:as => :select,:collection => ChinaCity.list,:input_html => {:class => 'city-select city-city'}%>
    <%= f.input :district_code,:as => :select,:collection => ChinaCity.list,:input_html => {:class => 'city-select city-district'}%>
  <%end%>
  <%=f.inputs :name,:order_by,:is_active %>
<% end%>
