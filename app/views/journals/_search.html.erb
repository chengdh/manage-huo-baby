<%= semantic_form_for search,:html => {:method => :get,:style => "width : 300px;" } do |f|%>
  <%= hidden_field_tag :direction,params[:direction] %>
  <%= hidden_field_tag :sort,params[:sort] %>
  <%= f.inputs do %>
    <%= f.input :org_id_eq,:label =>"机构" ,:as => :select,:collection => current_user.default_org.is_summary? ? branches_for_select : current_ability_orgs_for_select,:include_blank => false,:input_html => {:class => "select_org"} %>
    <%= f.input :bill_date_gte,:label => "提款日期",:as => :string,:input_html =>{:class => 'datepicker',:size => 20,:readonly => true,:value => Date.today} %>
    <%= f.input :bill_date_lte,:label => "~",:as => :string,:input_html =>{:class => 'datepicker',:size => 20,:readonly => true,:value => Date.today} %>
  <% end %>
  <%=f.actions do %>
    <%=submit_tag "查询帐目盘点登记表",:class => "sexybutton sexysimple sexyblue" %>
  <% end %>
<% end%>
