<%= semantic_form_for resource,:url => from_org_inner_transit_load_lists_path, :remote => true,:html => {:id =>  "#{resource_class.name.underscore}_form",:class => "bill_selector"} do |f|%>
  <%= f.error_messages %>
  <%= f.inputs do %>
    <%= f.hidden_field :user_id,:value => current_user.id if f.object.new_record?%>
    <%= f.input :bill_date,:as => :string,:input_html =>{:readonly => true,:size => 20,:class => 'datepicker'} %>
    <%= f.input :bill_no,:hint => "装车单编号",:input_html => {:title => "必填字段"} %>
    <%= f.input :from_org_id,:as => :select,:collection => current_ability_orgs_for_select,:include_blank => false,:input_html => {:id => "from_org_id"} %>
    <%= f.input :transit_org_id,:as => :select,:collection => all_summary_orgs_for_select,:include_blank => false,:input_html => {:id => "from_org_id"} %>
    <%= f.input :to_org_id,:as => :select,:collection => inner_bill_to_orgs_list,:input_html => {:id => :to_org_id} %>
    <%= f.input :note,:as => :string,:input_html => {:size => 60} %>
    <%=hidden_field_tag :state_eq,:billed %>
    <%=hidden_field_tag :type_in,"","data-type" => ['InnerTransitBill','HandInnerTransitBill','InnerTransitReturnBill'].to_json %>
  <% end %>
<% end %>
